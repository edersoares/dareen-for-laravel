{
    "name": "edersoares/dareen",
    "description": "Database reverse engineering",
    "authors": [
        {
            "name": "Eder Soares",
            "email": "edersoares@me.com"
        }
    ],
    "require": {
        "doctrine/dbal": "^2.8",
        "illuminate/database": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "Dareen\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "mysql": "vendor/bin/phpunit -c phpunit.mysql.xml --colors=always",
        "postgres": "vendor/bin/phpunit -c phpunit.postgres.xml --colors=always",
        "sqlite": "vendor/bin/phpunit -c phpunit.sqlite.xml --colors=always",
        "tests": [
            "@mysql",
            "@postgres",
            "@sqlite"
        ]
    }
}
